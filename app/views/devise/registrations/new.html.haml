.registrationNew
  %h2 新規登録
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :name, class: "registrationNew__name--label"
      %br/
      = f.text_field :name, autofocus: true, autocomplete: "name", class: "registrationNew__name--form"
    .field
      = f.label :email, class: "registrationNew__email--label"
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "registrationNew__email--form"
    .field
      = f.label :profile, class: "registrationNew__profile--label"
      %br/
      = f.text_area :profile, autofocus: true, autocomplete: "profile", class: "registrationNew__profile--form"
    .field
      = f.label :image, class: "registrationNew__image--label"
      %br/
      = f.file_field :image, autofocus: true, autocomplete: "image", class: "registrationNew__image--form"
    .field
      = f.label :password, class: "registrationNew__password--label"
      - if @minimum_password_length
        %em
          (最低 #{@minimum_password_length} 文字)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: "registrationNew__password--form"
    .field
      = f.label :password_confirmation, class: "registrationNew__passwordConf--label"
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "registrationNew__passwordConf--form"
    .actions
      = f.submit "Sign Up", class: "registrationNew__submit--btn"
  = render "devise/shared/links"
