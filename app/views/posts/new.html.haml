= render "topLogo"
.New
  .New__container
    %p.New__container--logo 新規投稿
    = form_with model: @post, local: true do |f|
      .NewContents
        = f.text_area :contents, class: 'NewContents__input', placeholder: 'コメントを入力'

      .NewImage
        = f.label :image, class: 'NewImage__input', id: :input_image do
          = icon('far', 'image')
          = f.file_field :image, class: 'Hidden'

      %img#img_prev
      .NewSubmit
        = f.submit "投稿する", class: 'NewSubmit__btn'
